<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NeatSplit.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NeatSplit"
    Title="NeatSplit">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:Views.HomePage}"
        Route="HomePage" />
    <ShellContent Title="AddGroup" ContentTemplate="{DataTemplate local:Views.AddGroupPage}" Route="AddGroupPage" />
    <ShellContent Title="GroupDetail" ContentTemplate="{DataTemplate local:Views.GroupDetailPage}" Route="GroupDetailPage" />
    <ShellContent Title="AddExpense" ContentTemplate="{DataTemplate local:Views.AddExpensePage}" Route="AddExpensePage" />

</Shell>
