<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NeatSplit.Views.GroupMembersPage"
             Title="Group Members">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Members List -->
            <CollectionView x:Name="MembersCollectionView"
                            ItemsSource="{Binding Members}"
                            Margin="10,10,10,80">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,5" Padding="15" CornerRadius="10" HasShadow="True" BackgroundColor="White">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                
                                <Label Grid.Column="0" 
                                       Text="{Binding Name}" 
                                       FontAttributes="Bold" 
                                       FontSize="18" 
                                       TextColor="Black" />
                                
                                <Button Grid.Column="1" 
                                        Text="âœï¸" 
                                        FontSize="16" 
                                        BackgroundColor="Transparent" 
                                        CommandParameter="{Binding Id}" 
                                        Clicked="OnEditMemberClicked" />
                                
                                <Button Grid.Column="2" 
                                        Text="ðŸ—‘" 
                                        FontSize="16" 
                                        BackgroundColor="Transparent" 
                                        CommandParameter="{Binding Id}" 
                                        Clicked="OnDeleteMemberClicked" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Add Member Button -->
            <Button x:Name="AddMemberButton"
                    Text="+"
                    Grid.Row="1"
                    WidthRequest="56"
                    HeightRequest="56"
                    CornerRadius="28"
                    FontSize="32"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    VerticalOptions="End"
                    HorizontalOptions="End"
                    Margin="20"
                    Clicked="OnAddMemberClicked" />
        </Grid>
    </ContentPage.Content>
</ContentPage> 