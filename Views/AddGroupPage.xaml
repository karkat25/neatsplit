<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NeatSplit.Views.AddGroupPage"
             Title="Add Group">
    <ContentPage.Content>
        <VerticalStackLayout Padding="20" Spacing="16">
            <Label Text="Group Name" />
            <Entry x:Name="GroupNameEntry" Placeholder="Enter group name" />

            <Label Text="Description" />
            <Entry x:Name="DescriptionEntry" Placeholder="Enter group description" />

            <Button Text="Create Group" Clicked="OnCreateGroupClicked" BackgroundColor="#512BD4" TextColor="White" />
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage> 