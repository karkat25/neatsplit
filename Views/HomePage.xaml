<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NeatSplit.Views.HomePage"
             Title="NeatSplit">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20" Spacing="20">
                <!-- Header -->
                <Label Text="NeatSplit" 
                       FontSize="32" 
                       FontAttributes="Bold"
                       HorizontalOptions="Center" 
                       Margin="0,20,0,40"/>
                
                <Label Text="Split expenses with friends and family" 
                       FontSize="16" 
                       TextColor="Gray"
                       HorizontalOptions="Center" 
                       Margin="0,0,0,40"/>

                <!-- Main Actions -->
                <Frame Padding="20" CornerRadius="10" HasShadow="True" BackgroundColor="White">
                    <StackLayout Spacing="15">
                        <Label Text="Quick Actions" FontSize="20" FontAttributes="Bold" Margin="0,0,0,10"/>
                        
                        <Button Text="âž• Create New Group" 
                                Clicked="OnCreateGroupClicked"
                                BackgroundColor="#512BD4"
                                TextColor="White"
                                CornerRadius="8"
                                HeightRequest="50"/>
                        
                        <Button Text="ðŸ‘¥ View My Groups" 
                                Clicked="OnViewGroupsClicked"
                                BackgroundColor="#2196F3"
                                TextColor="White"
                                CornerRadius="8"
                                HeightRequest="50"/>
                        
                        <Button Text="ðŸ“Š View Balances" 
                                Clicked="OnViewBalancesClicked"
                                BackgroundColor="#FF9800"
                                TextColor="White"
                                CornerRadius="8"
                                HeightRequest="50"/>
                    </StackLayout>
                </Frame>

                <!-- Recent Activity -->
                <Frame Padding="20" CornerRadius="10" HasShadow="True" BackgroundColor="White">
                    <StackLayout>
                        <Label Text="Recent Activity" FontSize="20" FontAttributes="Bold" Margin="0,0,0,10"/>
                        <Label Text="No recent activity" 
                               TextColor="Gray" 
                               HorizontalOptions="Center"
                               Margin="0,20"/>
                    </StackLayout>
                </Frame>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage> 